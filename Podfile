install! 'cocoapods',
         :generate_multiple_pod_projects => true,
         :incremental_installation => true

target 'Template macOS' do
  use_frameworks!
  pod 'Forge', :path => "../Forge"
  pod 'Satin', :path => "../Satin"
  pod 'Youi', :path => "../Youi"
  pod 'SwiftFormat/CLI'
end

target 'Template iOS' do
  use_frameworks!
  pod 'Forge', :path => "../Forge"
  pod 'Satin', :path => "../Satin"
  pod 'Youi', :path => "../Youi"
  pod 'SwiftFormat/CLI'
end

target 'Template tvOS' do
  use_frameworks!
  pod 'Forge', :path => "../Forge"
  pod 'Satin', :path => "../Satin"
  pod 'SwiftFormat/CLI'
end
